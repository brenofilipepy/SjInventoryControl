{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "noEmit": true,
    "allowImportingTsExtensions": true,
  },
  "include": [
    "src/**/*.ts",
    "views/**/*.tsx", "views/src/App.ts", "views/src/index.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}